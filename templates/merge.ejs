<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Merge PDF Files</title>

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #ff6a00, #ee0979);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      padding: 16px;
      color: #fff;
    }

    .upload-container {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(12px);
      padding: 2.5rem;
      border-radius: 18px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
      width: 380px;
      max-width: 100%;
      text-align: center;
    }

    .upload-container h1 {
      margin-bottom: 0.5rem;
      font-size: 1.8rem;
      font-weight: bold;
    }

    .upload-container p {
      margin-bottom: 1.5rem;
      font-size: 1rem;
      color: #f3f3f3;
      line-height: 1.5;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    input[type="file"] {
      display: block;
      width: 100%;
      padding: 10px;
      border: 2px dashed #fff;
      border-radius: 10px;
      background-color: transparent;
      cursor: pointer;
      color: #fff;
    }

    input[type="file"]::-webkit-file-upload-button {
      background: #fff;
      color: #ee0979;
      border: none;
      padding: 8px 12px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      transition: 0.3s;
    }

    input[type="file"]::-webkit-file-upload-button:hover {
      background: #ee0979;
      color: #fff;
    }

    .btn {
      background: #28c76f;
      border: none;
      padding: 10px 22px;
      border-radius: 8px;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn:hover {
      background: #20a65b;
      transform: scale(1.05);
    }

    /* Mobile support */
    @media (max-width: 480px) {
      .upload-container {
        padding: 1.8rem;
      }

      .upload-container h1 {
        font-size: 1.5rem;
      }

      .btn {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <div class="upload-container">
    <h1>Merge PDF Files</h1>
    <p>Upload multiple PDF files and combine them into a single document.</p>

   <form id="mergeForm" action="/com" method="POST" enctype="multipart/form-data" novalidate>
  <div class="form-group">
    <input
      type="file"
      id="pdfFiles"
      name="uploaded_file"
      accept="application/pdf"
      multiple
    >
  </div>

  <input type="submit" value="Merge PDFs" class="btn">
</form>

<script>
  const form = document.getElementById('mergeForm');
  const fileInput = document.getElementById('pdfFiles');
  const allowedType = 'application/pdf';

  // Validate files on selection
  fileInput.addEventListener('change', () => {
    const files = fileInput.files;

    if (!files.length) return;

    for (const file of files) {
      if (file.type !== allowedType) {
        alert('Only PDF files are allowed.');
        fileInput.value = '';
        return;
      }
    }
  });

  // Final validation gate before backend call
  form.addEventListener('submit', (e) => {
    const files = fileInput.files;

    if (!files.length) {
      e.preventDefault();
      alert('Please add File');
      return;
    }

    for (const file of files) {
      if (file.type !== allowedType) {
        e.preventDefault();
        alert('Only PDF files are allowed.');
        fileInput.value = '';
        return;
      }
    }
  });
</script>
