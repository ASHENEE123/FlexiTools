<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Image Format Converter</title>

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #00c6ff, #0072ff);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      padding: 16px;
      color: #fff;
    }

    .upload-container {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(12px);
      padding: 2.5rem;
      border-radius: 18px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
      width: 400px;
      max-width: 100%;
      text-align: center;
    }

    .upload-container h1 {
      margin-bottom: 0.5rem;
      font-size: 1.8rem;
      font-weight: bold;
    }

    .upload-container p {
      margin-bottom: 1.5rem;
      font-size: 1rem;
      color: #e6e6e6;
      line-height: 1.5;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    input[type="file"] {
      display: block;
      width: 100%;
      margin-bottom: 1rem;
      padding: 10px;
      border: 2px dashed #fff;
      border-radius: 10px;
      background-color: transparent;
      cursor: pointer;
      color: #fff;
    }

    input[type="file"]::-webkit-file-upload-button {
      background: #fff;
      color: #0072ff;
      border: none;
      padding: 8px 12px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      transition: 0.3s;
    }

    input[type="file"]::-webkit-file-upload-button:hover {
      background: #0072ff;
      color: #fff;
    }

    input[list] {
      width: 100%;
      padding: 10px;
      border-radius: 8px;
      border: none;
      margin-bottom: 1rem;
      text-align: center;
      font-weight: bold;
      color: #0072ff;
    }

    .btn {
      background: #ff512f;
      border: none;
      padding: 10px 22px;
      border-radius: 8px;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn:hover {
      background: #dd2476;
      transform: scale(1.05);
    }

    /* Mobile support */
    @media (max-width: 480px) {
      .upload-container {
        padding: 1.8rem;
      }

      .upload-container h1 {
        font-size: 1.5rem;
      }

      .btn {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <div class="upload-container">
    <h1>Image Format Converter</h1>
    <p>Upload an image and choose the format you want to convert it into.</p>

    <form id="convertForm" action="/upload" method="POST" enctype="multipart/form-data" novalidate>
      <div class="form-group">
        <input
          type="file"
          id="imageFile"
          name="uploaded_file"
          accept="image/*"
          multiple
        >

        <input
          list="formats"
          id="formatInput"
          name="brow"
          placeholder="Select format"
        >

        <datalist id="formats">
          <option value="JPEG">
          <option value="PNG">
          <option value="JPG">
          <option value="WEBP">
        </datalist>
      </div>

      <input type="submit" value="Convert Image" class="btn">
    </form>
  </div>

  <script>
    const form = document.getElementById('convertForm');
    const fileInput = document.getElementById('imageFile');
    const formatInput = document.getElementById('formatInput');

    const allowedFormats = ['JPEG', 'PNG', 'JPG', 'WEBP'];
    const allowedMimeTypes = ['image/jpeg', 'image/png', 'image/webp'];

    // File validation
    fileInput.addEventListener('change', () => {
      const files = fileInput.files;

      if (!files.length) {
        return;
      }

      for (let file of files) {
        if (!allowedMimeTypes.includes(file.type)) {
          alert('file not supported');
          fileInput.value = '';
          return;
        }
      }
    });

    // Form validation
    form.addEventListener('submit', (e) => {
      const files = fileInput.files;
      const format = formatInput.value.trim().toUpperCase();

      if (!files.length || !format) {
        e.preventDefault();
        alert('Please fill the inputs.');
        return;
      }

      if (!allowedFormats.includes(format)) {
        e.preventDefault();
        alert('file not added');
        formatInput.value = '';
        return;
      }
    });
  </script>
</body>
</html>
